<h1>Listing haggles</h1>

<table>
  <thead>
    <tr>
      <th>Commodity</th>
      <th>Open</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @haggles.each do |haggle| %>
      <tr>
        <td><%= haggle.commodity %></td>
        <td><%= haggle.open %></td>
        <td><%= link_to 'Show', haggle %></td>
        <td><%= link_to 'Edit', edit_haggle_path(haggle) %></td>
        <td><%= link_to 'Destroy', haggle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Haggle', new_haggle_path %>
