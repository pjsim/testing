<h1>Listing offers</h1>

<table>
  <thead>
    <tr>
      <th>Haggle</th>
      <th>Type</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Meet you</th>
      <th>Meet me</th>
      <th>Meet half</th>
      <th>Ship you</th>
      <th>From</th>
      <th>To</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.haggle %></td>
        <td><%= offer.type %></td>
        <td><%= offer.price %></td>
        <td><%= offer.quantity %></td>
        <td><%= offer.meet_you %></td>
        <td><%= offer.meet_me %></td>
        <td><%= offer.meet_half %></td>
        <td><%= offer.ship_you %></td>
        <td><%= offer.from %></td>
        <td><%= offer.to %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
