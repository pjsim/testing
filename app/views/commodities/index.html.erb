<h1>Listing commodities</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Stock quantity</th>
      <th>Quantity units</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commodities.each do |commodity| %>
      <tr>
        <td><%= commodity.title %></td>
        <td><%= commodity.description %></td>
        <td><%= commodity.stock_quantity %></td>
        <td><%= commodity.quantity_units %></td>
        <td><%= link_to 'Create Haggle', new_commodity_haggle_path(commodity) %></td>
        <td><%= link_to 'Show', commodity %></td>
        <td><%= link_to 'Edit', edit_commodity_path(commodity) %></td>
        <td><%= link_to 'Destroy', commodity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

